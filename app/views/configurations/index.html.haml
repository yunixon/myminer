- model_class = ::Configuration
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nick)
      %th= model_class.human_attribute_name(:cpu)
      %th= model_class.human_attribute_name(:motherboard)
      %th= model_class.human_attribute_name(:video)
      %th= model_class.human_attribute_name(:miner)
      %th= model_class.human_attribute_name(:config)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @configurations.each do |configuration|
      %tr
        %td= link_to configuration.id, configuration_path(configuration)
        %td= configuration.nick
        %td= configuration.cpu
        %td= configuration.motherboard
        %td= configuration.video
        %td= configuration.miner
        %td= configuration.config
        %td= l configuration.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),         
            edit_configuration_path(configuration), :class => 'btn btn-mini' 
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               
            configuration_path(configuration),                                                                           
            :method => :delete,                                                                                          
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, 
            :class => 'btn btn-mini btn-danger'                                                                          
= link_to t('.new', :default => t("helpers.links.new")), 
  new_configuration_path,                                
  :class => 'btn btn-primary'                            