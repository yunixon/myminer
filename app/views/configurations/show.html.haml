- model_class = ::Configuration
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:nick)
      \:
  %dd= @configuration.nick
  %dt
    %strong
      = model_class.human_attribute_name(:hw_name)
      \:
  %dd= @configuration.hw_name
  %dt
    %strong
      = model_class.human_attribute_name(:mb)
      \:
  %dd= @configuration.mb
  %dt
    %strong
      = model_class.human_attribute_name(:driver)
      \:
  %dd= @configuration.driver
  %dt
    %strong
      = model_class.human_attribute_name(:miner)
      \:
  %dd= @configuration.miner
  %dt
    %strong
      = model_class.human_attribute_name(:config)
      \:
  %dd= @configuration.config
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    configurations_path, :class => 'btn'                     |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_configuration_path(@configuration), :class => 'btn' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    configuration_path(@configuration),                                                                          |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |