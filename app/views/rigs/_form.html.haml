= simple_form_for @rig, :html => { :class => 'form-vertical' } do |f|
  = f.input :name, placeholder: "name"
  = f.input :photo
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
      rigs_path, :class => 'btn'                         
