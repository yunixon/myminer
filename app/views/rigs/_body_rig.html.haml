= paginate @rigs
.container
  .row
    - @rigs.each do |rig|
      .col-lg-3.col-md-4.col-xs-6
        = image_tag rig.photo.url(:thumbnail)
        %p
          = link_to rig.name, rig_path(rig)
              
          - if can? :update, rig
            %td
              = link_to "Edit", edit_rig_path(rig)
            %td
              = link_to "Delete", rig_path(rig), method: :delete, data: {confirm: 'sure?'}
= paginate @rigs
