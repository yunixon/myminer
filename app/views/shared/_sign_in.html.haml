#sign_in.modal.fade.in
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal"} x
        %h2 Sign in
      .modal-body
        = simple_form_for(User.new, url: session_path(:user), html:{id: 'sign_in_user',
          class: 'form-vertical', :'data-type' => 'json'}, remote:true) do |f|
          = f.input :nick, autofocus: true
          = f.input :password, autocomplete: "off"
          = f.submit "Login", class: 'btn btn-primary'
      .modal-footer